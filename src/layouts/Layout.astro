---
import Header from "../components/page/Header.astro";
import Footer from "../components/page/Footer.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/globals.css";
import logo from "../assets/mdn23-logo.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
const ogImage = new URL(logo.src, Astro.site).href;

export const prerender = true;
---

<!doctype html>
<html lang="fr" class="view-transition">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />

    <title>{title}</title>

    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.mdn23.com/" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Space+Grotesk:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        view-transition-name: fade;
      }

      ::view-transition-old(fade),
      ::view-transition-new(fade) {
        animation-duration: 0.35s;
        animation-timing-function: ease-in-out;
      }

      body::before {
        content: "";
        position: fixed;
        inset: 0;
        background-image: url("/images/5268821.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        z-index: -1;
      }
    </style>
    <style is:global>
      :root {
        --font-body: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Arial,
          sans-serif;
        --font-display: "Space Grotesk", "Inter", system-ui, sans-serif;
      }

      body {
        margin: 0;
        background: transparent;
        font-family: var(--font-body);
      }

      h1,
      h2,
      h3 {
        font-family: var(--font-display);
      }
    </style>
  </head>

  <body class="min-h-screen flex flex-col bg-transparent">
    <ClientRouter />

    <Header />

    <main class="flex-1 bg-transparent">
      <slot />
    </main>

    <Footer />
  </body>
</html>
