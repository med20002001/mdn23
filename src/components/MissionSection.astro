---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
  text: string;
  image: ImageMetadata;
  alt: string;
  layout?: "textLeft" | "imageLeft";
  imageHeightClass?: string;
  isFirst?: boolean;
};

const {
  text,
  image,
  alt,
  layout = "textLeft",
  imageHeightClass = "h-56 md:h-64",
  isFirst = false,
} = Astro.props;
---

{isFirst ? (
  <div class="grid gap-10 lg:grid-cols-[1.4fr,1.6fr] items-center mb-12">
    <div class="space-y-6 text-gray-700 leading-relaxed">
      <p>{text}</p>
    </div>

    <div class={`relative w-full ${imageHeightClass} rounded-lg overflow-hidden shadow`}>
      <Image
        src={image}
        alt={alt}
        class="w-full h-full object-cover"
        loading="lazy"
        widths={[640, 960, 1280]}
        sizes="(min-width: 1024px) 50vw, 100vw"
      />
    </div>
  </div>
) : (
  <div class="grid gap-8 lg:grid-cols-2 items-center mb-12">
    {layout === "imageLeft" ? (
      <>
        <div class={`relative w-full ${imageHeightClass} rounded-lg overflow-hidden shadow`}>
          <Image
            src={image}
            alt={alt}
            class="w-full h-full object-cover"
            loading="lazy"
            widths={[640, 960, 1280]}
            sizes="(min-width: 1024px) 50vw, 100vw"
          />
        </div>

        <div class="text-gray-700 leading-relaxed">
          <p>{text}</p>
        </div>
      </>
    ) : (
      <>
        <div class="text-gray-700 leading-relaxed order-2 lg:order-1">
          <p>{text}</p>
        </div>

        <div class={`relative w-full ${imageHeightClass} rounded-lg overflow-hidden shadow order-1 lg:order-2`}>
          <Image
            src={image}
            alt={alt}
            class="w-full h-full object-cover"
            loading="lazy"
            widths={[640, 960, 1280]}
            sizes="(min-width: 1024px) 50vw, 100vw"
          />
        </div>
      </>
    )}
  </div>
)}
