---
import '../../styles/footer.css';
---

<footer class="footer-gradient py-16 md:py-20 border-t border-gray-200/50">
  <div class="max-w-[1200px] mx-auto px-5 sm:px-8 lg:px-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-12 mb-12">
      <div class="space-y-5">
        <h3 class="text-lg font-semibold text-gray-900 tracking-tight">
          <a href="/missions" class="footer-title-link hover:text-red-600 transition-colors duration-200">
            À propos de MDN23
          </a>
        </h3>
      </div>
      <div class="hidden md:block"></div>

      <div class="space-y-5">
        <h3 class="text-lg font-semibold text-gray-900 tracking-tight">
          <a href="/contact" class="footer-title-link hover:text-red-600 transition-colors duration-200">
            Contactez-nous
          </a>
        </h3>
      </div>
    </div>

    <div class="footer-separator h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent mb-8"></div>

    <div class="text-center">
      <p class="copyright-text text-sm text-gray-600">
        © 2026 Moroccan Diaspora Networking 23. Tous droits réservés.
      </p>
    </div>
    
  </div>
</footer>