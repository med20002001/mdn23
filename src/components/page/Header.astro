---
const currentPath = Astro.url.pathname;
import "../../styles/navbar/navbar.css";
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between h-24">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img
            src="/images/logo.png"
            alt="MDN23 - Moroccan Diaspora Networking 23"
            class="h-16 w-auto"
          />
        </a>
      </div>
      <div class="flex-1 hidden lg:flex justify-end">
        <ul class="menu hidden lg:flex">
          <li>
            <a href="#" onclick="return false;" class="has-dropdown">
              Organisation
              <svg
                class="dropdown-icon"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.25a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>

            <ul class="submenu">
              <li><a href="/missions">Mission</a></li>
              <li><a href="/equipe">Équipe</a></li>
              <li><a href="/partenariats">Partenariats</a></li>
            </ul>
          </li>
          <li>
            <a href="#" onclick="return false;" class="has-dropdown">
              Actualités
              <svg
                class="dropdown-icon"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.25a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>

            <ul class="submenu">
              <li><a href="/news">News</a></li>
              <li><a href="/publications">Publications</a></li>
              <li><a href="/projets">Projets</a></li>
              <li><a href="/media">Média</a></li>
            </ul>
          </li>
          <li>
            <a
              href="/agenda"
              class={currentPath === "/agenda" ||
              currentPath.startsWith("/agenda/")
                ? "active"
                : ""}
            >
              Agenda
            </a>
          </li>
          <li>
            <a
              href="/initiatives"
              class={currentPath === "/initiatives" ||
              currentPath.startsWith("/initiatives/")
                ? "active"
                : ""}
            >
              Initiatives
            </a>
          </li>
          <li>
            <a
              href="/services"
              class={currentPath === "/services" ||
              currentPath.startsWith("/services/")
                ? "active"
                : ""}
            >
              Services
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class={currentPath === "/contact" ? "active" : ""}
            >
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-gray-700"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
       <!-- Mobile Menu -->
<div id="mobile-menu" class="hidden lg:hidden pb-4">
  <div class="space-y-1">
    <!-- Organisation Mobile -->
    <details>
      <summary>
        <span>Organisation</span>
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"></path>
        </svg>
      </summary>
      <div>
        <a href="/missions">Mission</a>
        <a href="/equipe">Équipe</a>
        <a href="/partenariats">Partenariats</a>
      </div>
    </details>

    <!-- Actualités Mobile -->
    <details>
      <summary>
        <span>Actualités</span>
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"></path>
        </svg>
      </summary>
      <div>
        <a href="/news">News</a>
        <a href="/publications">Publications</a>
        <a href="/projets">Projets</a>
        <a href="/media">Média</a>
      </div>
    </details>

    <!-- Autres liens -->
    <a
      href="/agenda"
      class={currentPath.startsWith("/agenda") ? "active" : ""}
    >
      Agenda
    </a>
    <a
      href="/initiatives"
      class={currentPath.startsWith("/initiatives") ? "active" : ""}
    >
      Initiatives
    </a>
    <a
      href="/services"
      class={currentPath.startsWith("/services") ? "active" : ""}
    >
      Services
    </a>
    <a
      href="/contact"
      class={currentPath === "/contact" ? "active" : ""}
    >
      Contact
    </a>
  </div>
</div>

      </div>
    </div>

    <script>
      const mobileMenuBtn = document.getElementById("mobile-menu-btn");
      const mobileMenu = document.getElementById("mobile-menu");

      mobileMenuBtn?.addEventListener("click", () => {
        const isHidden = mobileMenu?.classList.toggle("hidden");
        mobileMenuBtn?.setAttribute(
          "aria-expanded",
          isHidden ? "false" : "true",
        );
      });
      document.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        if (!mobileMenuBtn?.contains(target) && !mobileMenu?.contains(target)) {
          mobileMenu?.classList.add("hidden");
          mobileMenuBtn?.setAttribute("aria-expanded", "false");
        }
      });
      document.addEventListener("astro:page-load", () => {
        mobileMenu?.classList.add("hidden");
        mobileMenuBtn?.setAttribute("aria-expanded", "false");
      });
    </script>
  </nav>
</header>
