---
import { Image } from "astro:assets";

const event = Astro.props?.event;
const Content = Astro.props?.Content;

if (!event || !event.data) {
  throw new Error("EventContent: event ou event.data manquant au build");
}
---
{event.data.image && (
  <div class="mb-6 sm:mb-8 w-full overflow-hidden rounded-lg border">
    <Image
      src={event.data.image}
      alt={event.data.title}
      width={800}
      height={450}
      class="w-full h-auto object-cover"
      loading="lazy"
    />
  </div>
)}

<article class="prose prose-sm sm:prose-base prose-neutral max-w-none">
  <Content />
</article>

<style>
  .prose img {
    width: 100%;
    height: auto;
    max-width: 100%;
    border-radius: 0.5rem;
  }
</style>
