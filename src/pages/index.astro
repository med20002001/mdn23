---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Slider from '../components/Slider';
---

<Layout title="MDN23 - Accueil" description="Notre force réside dans notre unité et notre diversité">
  <div class="container mx-auto px-4 py-8">
    <!-- Hero Text -->
    <div class="text-center mb-8">
      <p class="text-secondary font-bold text-lg md:text-xl">
        – Notre force réside dans notre unité et notre diversité –
      </p>
    </div>

    <!-- Slider Section -->
    <div class="mb-12">
      <Slider client:load />
    </div>

    <!-- Divider -->
    <div class="flex justify-center my-12">
      <div class="flex space-x-2">
        <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
        <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
        <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
      </div>
    </div>

    <!-- Featured Articles -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      <!-- Article 1 -->
      <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <a href="/nasrine-kheltent">
          <img 
            src="/images/nasrine-kheltent-fh2.jpg" 
            alt="Nasrine Kheltent" 
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="font-bold text-lg mb-4">
              Rencontre de Nasrine Kheltent avec la fondation Hassan 2
            </h3>
            <div class="flex justify-center">
              <a 
                href="/nasrine-kheltent" 
                class="inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg transition-colors"
              >
                Lire l'article
              </a>
            </div>
          </div>
        </a>
      </article>

      <!-- Article 2 - Placeholder -->
      <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <a href="/news">
          <img 
            src="/images/news-placeholder.jpg" 
            alt="News" 
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="font-bold text-lg mb-4">
              Dernières actualités
            </h3>
            <div class="flex justify-center">
              <a 
                href="/news" 
                class="inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg transition-colors"
              >
                Découvrir
              </a>
            </div>
          </div>
        </a>
      </article>

      <!-- Article 3 - Placeholder -->
      <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <a href="/initiatives">
          <img 
            src="/images/initiatives-placeholder.jpg" 
            alt="Initiatives" 
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="font-bold text-lg mb-4">
              Nos initiatives
            </h3>
            <div class="flex justify-center">
              <a 
                href="/initiatives" 
                class="inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg transition-colors"
              >
                En savoir plus
              </a>
            </div>
          </div>
        </a>
      </article>
    </div>

    <!-- Call to Action Section -->
    <div class="bg-primary text-white rounded-lg p-8 md:p-12 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Rejoignez-nous
      </h2>
      <p class="text-lg md:text-xl mb-6 max-w-2xl mx-auto">
        Devenez membre de MDN23 et participez activement au renforcement des liens entre la diaspora marocaine
      </p>
      <a 
        href="/contact" 
        class="inline-block bg-white text-primary hover:bg-gray-100 font-bold py-3 px-8 rounded-lg transition-colors"
      >
        Nous contacter
      </a>
    </div>
  </div>
</Layout>