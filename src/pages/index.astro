---
import Layout from "../layouts/Layout.astro";
import Slider from "../components/accueil/Slider";
import { Image } from "astro:assets";
import nasrine from "../assets/team/nasrine.jpg";
import initiativesplaceholder from "../assets/accueil/initiatives-placeholder.jpg";
import newsplaceholder from "../assets/accueil/news-placeholder.jpg";

---
<Layout
  title="Notre force réside dans notre unité et notre diversité"
  description="Notre force réside dans notre unité et notre diversité">
  <!-- BACKGROUND GLOBAL -->
  <div class="relative min-h-screen overflow-hidden bg-gradient-to-br from-slate-50 via-white to-slate-100">
    <!-- BLOBS CRÉATIFS -->
    <div class="pointer-events-none absolute -top-24 -left-24 w-96 h-96 bg-red-200/40 rounded-full blur-3xl"></div>
    <div class="pointer-events-none absolute bottom-0 right-0 w-[28rem] h-[28rem] bg-green-200/40 rounded-full blur-3xl"></div>
    <!-- HERO / SLIDER -->
    <section class="relative z-10 max-w-7xl mx-auto px-6 pt-28 pb-24">
      <div class="relative rounded-[2.5rem] bg-white/70 backdrop-blur-xl shadow-2xl p-10 md:p-16 overflow-hidden">

        <!-- DECOR -->
        <div class="absolute -top-32 -right-32 w-80 h-80 bg-gradient-to-br from-red-300 to-pink-300 rounded-full blur-3xl opacity-50"></div>

        <h1 class="relative text-center font-extrabold text-3xl md:text-5xl leading-tight tracking-tight text-gray-900 mb-14">
          Notre force réside dans notre
          <span class="block mt-2 bg-gradient-to-r from-red-500 to-green-500 bg-clip-text text-transparent">
            unité et notre diversité
          </span>
        </h1>

        <div class="relative">
          <Slider client:visible />
        </div>
      </div>
    </section>

 <!-- SECTION ARTICLES -->
<section class="relative z-10 max-w-7xl mx-auto px-6 pb-32">
  <!-- header -->
  <header class="mb-14 md:mb-16">
    <div class="flex items-end justify-between gap-6 flex-wrap">
      <div>
        <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight text-gray-900">
          Actualités & initiatives
        </h2>
        <p class="mt-3 max-w-2xl text-gray-600 text-base md:text-lg">
          Des actions concrètes, des histoires humaines et nos dernières informations.
        </p>
      </div>
      <a
        href="/news"
        class="inline-flex items-center gap-2 rounded-full bg-gray-900 text-white px-5 py-2.5 text-sm font-semibold hover:bg-gray-800 transition-colors"
      >
        Tout voir <span aria-hidden="true">→</span>
      </a>
    </div>
  </header>
      <div class="bg-white rounded-lg shadow-sm p-10">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <article class="overflow-hidden">
            <a
              href="/news/nasrine-kheltent"
              class="block hover:opacity-90 transition-opacity duration-300 cursor-pointer"
            >
              <Image
                src={nasrine}
                alt="Nasrine Kheltent"
                class="w-full h-64 object-cover rounded-lg mb-4"
              />
              <div>
                <h3 class="font-bold text-lg mb-4 text-gray-900">
                  Rencontre de Nasrine Kheltent avec la fondation Hassan 2
                </h3>
                <div class="flex justify-center">
                  <span
                    class="inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg transition-colors"
                  >
                    Lire l'article
                  </span>
                </div>
              </div>
            </a>
          </article>
          <article class="overflow-hidden">
             <Image
                src={newsplaceholder}
                alt="News"
                class="w-full h-64 object-cover rounded-lg"
              />
          </article>
          <article class="overflow-hidden">
             <Image
                src={initiativesplaceholder}
                alt="Initiatives"
                class="w-full h-64 object-cover rounded-lg"
              />
          </article>
        </div>

</Layout>