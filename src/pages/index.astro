---
import Layout from "../layouts/Layout.astro";
import Slider from "../components/accueil/Slider";
import { Image } from "astro:assets";
import nasrine from "../assets/team/nasrine.jpg";
import initiativesplaceholder from "../assets/accueil/initiatives-placeholder.jpg";
import newsplaceholder from "../assets/accueil/news-placeholder.jpg";

---

<Layout
  title="Notre force réside dans notre unité et notre diversité"
  description="Notre force réside dans notre unité et notre diversité"
>
  <div class="bg-[#f0f4f8]">
    <div class="container mx-auto px-4 py-8">
      <div class="bg-white rounded-lg shadow-sm p-10 mb-12">
        <div class="text-center mb-8">
          <p class="text-red-600 font-bold text-lg md:text-xl">
            – Notre force réside dans notre unité et notre diversité –
          </p>
        </div>
        <div>
          <Slider client:load />
        </div>
      </div>
      <div class="flex justify-center my-12">
        <div class="flex space-x-2">
          <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
          <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
          <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-sm p-10">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <article class="overflow-hidden">
            <a
              href="/news/nasrine-kheltent"
              class="block hover:opacity-90 transition-opacity duration-300 cursor-pointer"
            >
              <Image
                src={nasrine}
                alt="Nasrine Kheltent"
                class="w-full h-64 object-cover rounded-lg mb-4"
              />
              <div>
                <h3 class="font-bold text-lg mb-4 text-gray-900">
                  Rencontre de Nasrine Kheltent avec la fondation Hassan 2
                </h3>
                <div class="flex justify-center">
                  <span
                    class="inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg transition-colors"
                  >
                    Lire l'article
                  </span>
                </div>
              </div>
            </a>
          </article>
          <article class="overflow-hidden">
             <Image
                src={newsplaceholder}
                alt="News"
                class="w-full h-64 object-cover rounded-lg"
              />
          </article>
          <article class="overflow-hidden">
             <Image
                src={initiativesplaceholder}
                alt="Initiatives"
                class="w-full h-64 object-cover rounded-lg"
              />
          </article>
        </div>
      </div>
    </div>
  </div>
</Layout>
