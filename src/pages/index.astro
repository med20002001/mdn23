---
import Layout from "../layouts/Layout.astro";
import Slider from "../components/accueil/Slider";
import FeaturedArticles from "@/components/accueil/FeaturedArticles.astro";

---

<Layout
  title="Notre force réside dans notre unité et notre diversité"
  description="Notre force réside dans notre unité et notre diversité"
>
  <section class="py-14 sm:py-20 bg-transparent">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

      <div class="bg-white rounded-2xl shadow-md p-6 sm:p-10 lg:p-14">

        <header class="mb-12 text-center">
          <p class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-gray-900">
            – Notre force réside dans notre unité et notre diversité –
          </p>
          <div
            class="mx-auto h-1 w-20 rounded-full mt-6
                   bg-gradient-to-r from-red-500/40 to-green-500/40"
          ></div>
        </header>

        <div class="mb-16">
          <Slider client:load />
        </div>

        <FeaturedArticles />

      </div>

    </div>
  </section>
</Layout>
