---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/contact/ContactForm";
import { getEntry } from 'astro:content';
import { Image } from 'astro:assets';
const contactEntry = await getEntry('contact', 'contact');
const { Content } = await contactEntry.render();
---
<Layout title={contactEntry.data.title}>
  <main class="bg-[#f0f4f8] min-h-screen">
    <section class="max-w-6xl mx-auto px-4 lg:px-8 py-16">
      <div class="contact-wrapper">
        <div class="bg-white rounded-lg p-10 shadow-sm contact-card">
          <div class="grid grid-cols-1 lg:grid-cols-[1fr_280px] gap-8 mb-8">
            <div>
              <h1 class="text-3xl font-bold text-gray-900 mb-4">
                {contactEntry.data.title}
              </h1>
              <div class="text-gray-800 leading-relaxed text-sm prose prose-sm max-w-none">
                <Content />
              </div>
            </div>
            <div class="hidden lg:block contact-image-box">
              <div class="contact-image-bg">
                <Image
                  src={contactEntry.data.image}
                  alt={contactEntry.data.imageAlt}
                  class="w-full h-auto rounded-xl object-cover shadow-sm"
                  loading="lazy"
                  width={280}
                  height={350}
                />
              </div>
              <div class="contact-character"></div>
            </div>
          </div>
          <div class="max-w-full">
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
