---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/contact/ContactForm";
import { getEntry } from "astro:content";
import { Image } from "astro:assets";

const contactEntry = await getEntry("contact", "contact");
const { Content } = await contactEntry.render();
---

<Layout title={contactEntry.data.title}>
  <main class="">
    <section class="max-w-6xl mx-auto px-3 sm:px-5 lg:px-8 py-6 sm:py-8 lg:py-10">
      <div class="bg-white rounded-xl shadow-md p-4 sm:p-6 lg:p-8">

        <div class="grid grid-cols-1 md:grid-cols-[1fr_220px] lg:grid-cols-[1fr_260px] gap-6 lg:gap-10 items-start">
          <div class="max-w-prose mx-auto md:mx-0 md:text-left">

            <h1 class="mt-2 text-3xl sm:text-4xl lg:text-5xl font-extrabold text-gray-900">
              {contactEntry.data.title}
            </h1>
             <div
            class="h-1 w-20 rounded-full mb-6
                   bg-gradient-to-r from-red-500/40 to-green-500/40"
          ></div>

            <div class="flex justify-center mb-4 md:hidden">
              <Image
                src={contactEntry.data.image}
                alt={contactEntry.data.imageAlt}
                class="w-[120px] aspect-[4/5] object-cover rounded-lg shadow-sm"
                loading="lazy"
                width={120}
                height={160}
              />
            </div>

            <div class="relative pl-6 text-xs sm:text-sm md:text-base leading-5 sm:leading-6 md:leading-7 text-gray-700">
              <span
                class="absolute -left-4 top-0 h-full w-1 rounded-full
                       bg-gradient-to-b from-red-500/40 to-green-500/40"
              ></span>

              <Content />
            </div>
          </div>

          <div class="hidden md:flex justify-end">
            <Image
              src={contactEntry.data.image}
              alt={contactEntry.data.imageAlt}
              class="w-full max-w-[150px] lg:max-w-[180px] aspect-[4/5] object-cover rounded-lg shadow-sm"
              loading="lazy"
              width={220}
              height={280}
            />
          </div>
        </div>

        <div class="mt-6 sm:mt-8 lg:mt-10">
          <div class="max-w-prose mx-auto md:mx-0">
            <ContactForm client:load />
          </div>
        </div>

      </div>
    </section>
  </main>
</Layout>
