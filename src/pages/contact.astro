---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/contact/ContactForm";
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import "../styles/animations.css";

const contactEntry = await getEntry("contact", "contact");
const { Content } = await contactEntry.render();
---

<Layout title={contactEntry.data.title}>
  <main>
    <section class="max-w-[100rem] mx-auto px-10 sm:px-5 lg:px-6 py-6 sm:py-8 lg:py-10">
      <div class="bg-white rounded-xl shadow-md p-4 sm:p-6 lg:p-8">

        <div class="grid grid-cols-1 md:grid-cols-[1fr_220px] lg:grid-cols-[1fr_260px] gap-6 lg:gap-10 items-start">

          <div class="max-w-6xl mx-auto md:mx-0 md:text-left slide slide-left">
            <h1 class="mt-2 text-3xl sm:text-4xl lg:text-5xl text-gray-900">
              {contactEntry.data.title}
            </h1>

            <div class="h-1 w-20 rounded-full mb-6 bg-gradient-to-r from-red-500/40 to-green-500/40"></div>
            <div class="flex justify-center mb-4 md:hidden slide slide-bottom">
              <Image
                src={contactEntry.data.image}
                alt={contactEntry.data.imageAlt}
                class="w-[120px] aspect-[4/5] object-cover rounded-lg shadow-sm"
                loading="lazy"
                width={120}
                height={160}
              />
            </div>

            <div class="relative text-sm sm:text-base lg:text-lg leading-relaxed lg:leading-loose text-gray-700">
              <Content />
            </div>
          </div>
          <div class="hidden md:flex justify-end slide slide-right">
            <Image
              src={contactEntry.data.image}
              alt={contactEntry.data.imageAlt}
              class="w-full max-w-[150px] lg:max-w-[180px] aspect-[4/5] object-cover rounded-lg shadow-sm"
              loading="lazy"
              width={220}
              height={280}
            />
          </div>

        </div>
        <div class="mt-20 sm:mt-24 lg:mt-28 pt-16 border-t border-gray-200/50 slide slide-bottom">
          <div class="max-w-3xl mx-auto">
            <div class="mb-10 text-center">
              <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-3">
                Envoyez-nous un message
              </h2>
              <p class="text-lg text-gray-600 leading-relaxed">
                Nous vous répondrons dans les plus brefs délais.
              </p>
            </div>

            <div class="bg-gray-50/50 rounded-2xl p-6 sm:p-8 lg:p-10 border border-gray-100">
              <ContactForm client:load />
            </div>
          </div>
        </div>

      </div>
    </section>
  </main>
</Layout>

<script is:inline>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("show");
        }
      });
    },
    { threshold: 0.15 }
  );

  document.querySelectorAll(".slide").forEach((el) => {
    observer.observe(el);
  });
</script>
