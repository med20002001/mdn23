---
import Layout from "../layouts/Layout.astro";
import MissionSection from "../components/MissionSection.astro";
import { getEntryBySlug, type CollectionEntry } from "astro:content";

const entry = await getEntryBySlug("pages", "mission");
if (!entry) throw new Error("Contenu introuvable: src/content/pages/mission.md");

type PageEntry = CollectionEntry<"pages">;
type Section = PageEntry["data"]["sections"][number];

const { title, intro, sections, conclusion } = entry.data;
---

<Layout title={title}>
  <section class="bg-[#f0f4f8] py-16">
    <div class="max-w-6xl mx-auto px-4 lg:px-8">
      <div class="bg-white rounded-lg shadow-sm p-10">
        <header class="mb-10">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{title}</h1>
          <p class="text-gray-700 leading-relaxed max-w-none text-justify">{intro}</p>
        </header>

        {sections.map((s: Section, idx: number) => (
          <MissionSection
            text={s.text}
            image={s.image}
            alt={s.alt}
            layout={s.layout}
            imageHeightClass={s.imageHeightClass}
            isFirst={idx === 0}
          />
        ))}

        <div class="text-gray-700 leading-relaxed">
          <p>{conclusion}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
