---
import { Image } from "astro:assets";
const { event, Content } = Astro.props;
---

{event.data.image && (
  <Image
    src={event.data.image}
    alt={event.data.title}
    width={800}
    height={450}
    class="mb-8 w-full rounded-lg border object-contain"
    loading="lazy"
  />
)}
<article class="prose prose-neutral max-w-none">
  <Content />
</article>
