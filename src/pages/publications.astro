---
import Layout from "../layouts/Layout.astro";

const publication = {
  title: "Oral Culture: Challenges in the IT Organizational Environment",
  image: "/images/pub1.jpg",
  href: "/publications/oral-culture",
};
---

<Layout title="Publications">
  <main class="bg-[#f0f4f8] min-h-screen">
    <section class="max-w-5xl mx-auto px-4 lg:px-0 py-12">
      <!-- Carte blanche avec bordure gauche -->
      <div class="bg-white rounded-lg shadow-sm border-l-4 border-gray-200 p-10">
        <!-- Titre section -->
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          Publications
        </h1>

        <!-- Contenu de la publication -->
        <article class="max-w-lg">
          <!-- Image -->
          <img
            src={publication.image}
            alt={publication.title}
            class="w-full h-auto object-cover rounded-sm"
            loading="lazy"
          />

          <!-- Titre de l'article -->
          <a
            href={publication.href}
            class="mt-6 block text-base font-semibold text-gray-900 leading-snug underline underline-offset-2 decoration-gray-900"
          >
            Oral Culture: Challenges in the IT Organizational<br />
            Environment
          </a>

          <!-- Bouton vert "Lire l'article" -->
          <a
            href={publication.href}
            class="mt-6 inline-flex items-center justify-center w-full rounded-full text-white text-base font-medium py-3.5 transition-colors"
            style="background-color: #00d27f;"
            onmouseover="this.style.backgroundColor='#00bf73'"
            onmouseout="this.style.backgroundColor='#00d27f'"
          >
            Lire l'article
          </a>
        </article>
      </div>
    </section>
  </main>
</Layout>
