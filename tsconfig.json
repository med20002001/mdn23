{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
       "@/*": ["./src/*"],
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"]
    },
    "types": ["vite/client", "astro/client"]
  }, 
  "include": ["src", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
